{% extends 'layout.html.twig' %}


{# TODO Replace fix text by info from API "Season X of tvshowname" #}
{% block title %}Season {% endblock %}

{# TODO Delete before merging because it will be in layout file #}
    {% block stylesheet %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
              integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
              crossorigin="anonymous">{% endblock %}

{# TODO Replace content block by the block in tvshow template #}
{% block content %}

    {# Display Season Number generated by link clicked by user #}

    <h4>SEASON X</h4>

    <div id="accordion">
        {# Display one dropdown menu per episodes #}
        {% for episode in episodes %}
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapse{{ loop.index }}"
                                aria-expanded="true" aria-controls="collapseOne">
                            <div class="row">
                                <div class="col-3">
                                    Image from API
                                </div>
                                <div class="col-3">
                                    <p>Episode {{ episode.episode_number }}</p>
                                    <br>
                                    <p>Aired on the {{ episode.air_date }}</p>
                                </div>
                                <div class="col">
                                    <p>{{ episode.name }}</p>
                                </div>
                            </div>
                        </button>
                    </h5>
                </div>

                <div id="collapse{{ loop.index }}" class="collapse show" aria-labelledby="headingOne"
                     data-parent="#accordion">
                    <div class="card-body">
                        <p>{{ episode.overview }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

