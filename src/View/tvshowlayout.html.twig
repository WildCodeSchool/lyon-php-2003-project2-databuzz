{% extends 'layout.html.twig' %}

{% block content %}
    <header>
        <div class="container-fluid">
            <div class="row position-relative row-header">
                <div class="img-header"><img
                            src="{% block img_header %}{% endblock %}"
                            alt="{% block alt_img %}{% endblock %}"
                            class="img-back">
                </div>
                <div class="col-10 offset-1">
                    <div class="row img-title">
                        <div class="col-lg-4">
                            <img src="https://image.tmdb.org/t/p/w500/{{ tvshow.img }}" class="poster-show"
                                 alt="...">
                        </div>
                        <div class="col-lg-8 buzz-title">
                            <h2>{% block rating_season %}{% endblock %}</h2>
                            <h1>{% block serietitle %}{% endblock %}</h1>
                            <div class="year">({% block year %}{% endblock %})</div>
                            <div class="synopsis">{% block synopsis %}{% endblock %}</div>
                            <div class="genre">{% block genre %}{% endblock %}</div>
                            <div class="row">
                                <div class="col-lg-6 watched">
                                    <span>{% block next_episode %}{% endblock %}</span>
                                    <span>{% block on_air %}{% endblock %}</span>
                                </div>
                                <div class="col-lg-6 buzzer">{% block buzz %}{% endblock %}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 buzzer">
                </div>
            </div>
        </div>
    </header>
    {% block tvshowlayoutcontent %}{% endblock %}
{% endblock %}